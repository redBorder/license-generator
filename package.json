{
  "name": "license-server",
  "version": "0.1.0",
  "description": "Server for demo licenses generation using a REST API",
  "main": "dist/app.js",
  "scripts": {
    "app": "node dist/app.js",
    "build": "gulp build",
    "watch": "gulp watch",
    "test": "mocha src/test --recursive --compilers ts:ts-node/register --bail",
    "docs": "spectacle api.yaml -t docs",
    "coverage": "nyc npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "api",
    "license",
    "generator",
    "redBorder"
  ],
  "author": "Diego Fern√°ndez Barrera",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/chai": "^3.5.1",
    "@types/express": "^4.0.35",
    "@types/joi": "^10.3.0",
    "@types/log4js": "0.0.32",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.13",
    "@types/ramda": "github:types/npm-ramda",
    "@types/sinon": "^2.1.3",
    "@types/uuid": "^2.0.29",
    "chai": "^3.5.0",
    "coveralls": "^2.13.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.3.0",
    "mocha-typescript": "~1.0.0",
    "nyc": "^10.2.0",
    "sinon": "^2.1.0",
    "spectacle-docs": "^0.8.2",
    "ts-node": "^3.0.2"
  },
  "dependencies": {
    "base64-url": "^1.3.3",
    "express": "^4.15.2",
    "gulp": "^3.9.1",
    "gulp-typescript": "^3.1.6",
    "joi": "^10.4.1",
    "log4js": "^1.1.1",
    "node-rsa": "^0.4.2",
    "ramda": "^0.23.0",
    "ramda-fantasy": "^0.8.0",
    "swagger-express-mw": "^0.1.0",
    "typescript": "^2.2.2",
    "uuid": "^3.0.1"
  },
  "nyc": {
    "include": [
      "src/api/**/*.ts"
    ],
    "exclude": [
      "src/test"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "json",
      "html"
    ],
    "all": true
  }
}
